.PlaylistItem
  display: flex
  background-color rgba(255,255,255,.1)
  border-bottom 1px solid rgba(255,255,255,.2)
  padding 8px
  &.is-selected
    background-color transparent

  &__art
    width: 60px
    height: 60px
    background-color: #333355
    margin-right: 8px

  &__info{}
  &__song
    font-weight: 500
    color: white
    margin-bottom: 2px
  &__artist
    color: rgba(255,255,255,.8)
    margin-bottom: 4px
  &__album
    color: rgba(255,255,255,.6)
    font-size: 12px
  &__indicator
    margin auto 20px auto auto
    width: 20px
    height: 20px
    path
      fill white

